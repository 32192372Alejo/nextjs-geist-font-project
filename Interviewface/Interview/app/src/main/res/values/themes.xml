<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Interviewface" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_accent</item>
        <item name="colorPrimaryVariant">@color/yellow_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_accent</item>
        <item name="colorSecondaryVariant">@color/yellow_accent</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/navigation_background</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:colorBackground">@color/dark_background</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Font family -->
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        
        <!-- Text appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Interviewface.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Interviewface.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Interviewface.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Interviewface.Body2</item>
        
        <!-- Enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
        
        <!-- Material Design attributes -->
        <item name="materialButtonStyle">@style/Widget.Interviewface.Button</item>
    </style>
    
    <style name="Widget.Interviewface.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue_accent</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <!-- Estilo para el AlertDialog -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/dark_background</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="colorPrimary">@color/blue_accent</item>
        <item name="colorAccent">@color/green_accent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle.Negative</item>
    </style>
    
    <style name="AlertDialogButtonStyle.Positive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/green_accent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="AlertDialogButtonStyle.Negative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue_accent</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
